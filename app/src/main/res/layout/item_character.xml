<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_margin="4dp"
        app:cardElevation="10dp"
        android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="128dp"
                android:layout_height="192dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/characterImigeView" app:layout_constraintStart_toStartOf="parent"
        />
        <TextView
                android:background="#66000000"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_width="0dp"
                android:textSize="16sp"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" android:id="@+id/titelTextViewCharacter" tools:text="Title Name"
                app:layout_constraintEnd_toEndOf="@+id/characterImigeView"
                app:layout_constraintStart_toStartOf="@+id/characterImigeView"
                app:layout_constraintBottom_toBottomOf="@+id/characterImigeView"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>